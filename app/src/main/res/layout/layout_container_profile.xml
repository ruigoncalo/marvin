<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/text_label_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/text.description"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_description_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/text_label_comics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/text.comics"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"/>

    <FrameLayout
        android:id="@+id/container_comics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <include
            android:id="@+id/loading_comics"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_comics_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_comics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <TextView
        android:id="@+id/text_label_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/text.series"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"/>

    <FrameLayout
        android:id="@+id/container_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <include
            android:id="@+id/loading_series"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_series_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/text_label_stories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/text.stories"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"/>

    <FrameLayout
        android:id="@+id/container_stories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <include
            android:id="@+id/loading_stories"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_stories_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/text_label_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/text.events"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"/>

    <FrameLayout
        android:id="@+id/container_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <include
            android:id="@+id/loading_events"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/text_events_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

    </FrameLayout>


    <TextView
        android:id="@+id/text_label_links"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/text.related_links"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button_detail"
        android:text="@string/text.detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonLinks"/>

    <Button
        android:id="@+id/button_wiki"
        android:text="@string/text.wiki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonLinks"/>


    <Button
        android:id="@+id/button_comiclink"
        android:text="@string/text.comiclink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonLinks"/>

</LinearLayout>